@using IPCLogger.ConfigurationService.Entities.Models;
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<System.Collections.Generic.List<DeclaredLoggerModel>>

<div class="card bg-light main-table-wrap">
    
    <input type="hidden" id="application-id" value="@ViewBag.applicationId" />

    <table id="table-loggers" class="table table-sm ui-table-list">
        <thead class="card-header">
            <tr>
                <th style="width: 25%">Logger type</th>
                <th style="width: 25%">Logger name</th>
                <th style="width: auto">Namespace</th>
                <th style="width: 130px" class="th-actions"><button id="btn-add-logger" class="btn btn-link">Add a logger</button></th>
            </tr>
        </thead>
        <tbody>
            @foreach (DeclaredLoggerModel model in Model)
            {
                <tr id="row-logger" modelId="@(model.Id)">
                    <td id="cell-logger-type">@(model.TypeName)</td>
                    <td id="cell-logger-type">@(model.Name)</td>
                    <td id="cell-desciption">@(model.Namespace)</td>
                    <td id="cell-actions">
                        <div class="btn-group btn-group-sm" role="group">
                            <button id="btn-logger-settings-@(model.Id)" class="btn btn-info">Manage settings</button>
                            @*<button id="btn-logger-view-xml-@(model.Id)" class="btn btn-secondary btn-glyph fa fa-save"></button>*@
                        </div>
                        <div class="btn-group btn-group-sm" role="group">
                            <button id="btn-logger-delete-@(model.Id)" class="btn btn-danger btn-glyph fa fa-trash"></button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div id="popup-add-logger" class="modal popup" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document"></div>
    </div>
</div>

<script src="../../js/views/loggers.js" type="text/javascript"></script>
<script src="../../js/controllers/loggerController.js" type="text/javascript"></script>
<script src="../../js/controllers/popupController.js" type="text/javascript"></script>