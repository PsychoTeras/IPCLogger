@using IPCLogger.ConfigurationService.Entities.Models;
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<System.Collections.Generic.List<ApplicationModel>>

<div class="card bg-light main-table-wrap">
    <table id="table-applications" class="table table-sm ui-table-list">
        <thead class="card-header">
            <tr>
                <th style="width: 35%">Application name</th>
                <th style="width: auto">Description</th>
                <th style="width: 162px">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ApplicationModel model in Model)
            {
                <tr id="row-application" modelId="@(model.Id)">
                    <td id="cell-application-name">@(model.Name)</td>
                    <td id="cell-desciption">@(model.Description)</td>
                    <td id="cell-actions">
                        <div class="btn-group btn-group-sm">
                            <button id="btn-configure-application-@(model.Id)" class="btn btn-info">Configure loggers</button>
                            <button class="btn btn-info dropdown-toggle dropdown-toggle-split" data-toggle="dropdown"></button>
                            <div class="dropdown-menu dropdown-menu-right">
                                @*<a id="btn-remove-logger-@(model.Id)" class="dropdown-item" style="cursor: pointer">Remove logger</a>*@
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="../../js/views/applications.js" type="text/javascript"></script>
<script src="../../js/controllers/applicationController.js" type="text/javascript"></script>