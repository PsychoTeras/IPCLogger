@using IPCLogger.ConfigurationService.Entities.Models;
@using IPCLogger.ConfigurationService.CoreServices;
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<DeclaredLoggerModel>

<input type="hidden" id="application-id" value="@ViewBag.applicationId" />
<input type="hidden" id="logger-id" value="@ViewBag.loggerId" />

<hr>

<form id="form-logger-settings">
    @foreach (PropertyModel model in Model.Properties)
    {
        <div class="mt-2">
            <label>
                @(model.Name)
                @if (model.IsRequired)
                {
                    <a style="color: red; font-weight: bold"> * </a>
                }
            </label>
            @Html.Raw(ControlsService.ControlByPropertyModel(model))
            <div class="invalid-feedback"></div>
        </div>
    }
</form>

<div id="p-save-cancel">
    <button id="btn-save" class="btn btn-sm btn-success">Save</button>
    <div class="btn-group">
        <button class="btn btn-sm btn-secondary" id="btn-cancel">Cancel</button>
        <button class="btn btn-secondary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown"></button>
        <div class="dropdown-menu dropdown-menu-right">
            <a class="dropdown-item" id="btn-reset" style="cursor: pointer">Reset values</a>
        </div>
    </div>
</div>

<link href="../../css/views/loggerSettings.css" rel="stylesheet">
<script src="../../js/controllers/applicationController.js" type="text/javascript"></script>
<script src="../../js/controllers/loggerSettingsControllers.js" type="text/javascript"></script>
<script src="../../js/views/loggerSettings.js" type="text/javascript"></script>