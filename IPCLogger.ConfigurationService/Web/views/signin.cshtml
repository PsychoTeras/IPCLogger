<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Transitional//EN">
<html lang="en" xmlns="http://www.w3.org/1999/xhtml">

@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<IPCLogger.ConfigurationService.Entities.DTO.UserAuthDTO>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>IPCLogger Configuration Console</title>

    <link href="../css/bootstrap/bootstrap.min.css" rel="stylesheet">
    <link href="../css/signin.css" rel="stylesheet">

    <script src="../js/jQuery/jquery-3.3.1.min.js" type="text/javascript"></script>
</head>

<body class="text-center">

    <form class="form-signin" method="POST">

        <img class="mb-3" src="../assets/application.png" alt="" width="72" height="72">
        <h3 class="mb-3 font-weight-normal">Please sign in</h3>

        @if (Model.LoginFailed)
        {
            <label class="alert alert-danger">Invalid User name or Password</label>
        }

        <label for="UserName" class="sr-only">User name</label>
        <input type="text" id="UserName" name="UserName" class="form-control" placeholder="User name" value="@Model.UserName" required
               @(!Model.LoginFailed ? "autofocus" : "")>

        <label for="Password" class="sr-only">Password</label>
        <input type="password" id="Password" name="Password" class="form-control" placeholder="Password" required
               @(Model.LoginFailed ? "autofocus" : "")>

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" id="RememberMe" name="RememberMe" value="@Model.RememberMe" @(Model.RememberMe ? "checked" : "")>Remember me
            </label>
        </div>

        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>

    </form>

</body>

</html>